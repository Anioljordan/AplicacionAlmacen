        <Label text="Nom:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
        <TextField fx:id="txtNom" GridPane.columnIndex="1" GridPane.rowIndex="1" />
   
        <Label text="Descripció:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <TextField fx:id="txtDescr" GridPane.columnIndex="1" GridPane.rowIndex="2" />
   
        <Label text="Data Alta:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <TextField fx:id="txtDataA" GridPane.columnIndex="1" GridPane.rowIndex="3" />
   
        <Label text="Data Baixa:" GridPane.columnIndex="0" GridPane.rowIndex="4" />
        <TextField fx:id="txtDataB" GridPane.columnIndex="1" GridPane.rowIndex="4" />
   
        <Label text="Proveïdor:" GridPane.columnIndex="0" GridPane.rowIndex="5" />
        <ComboBox fx:id="cmbProv" prefHeight="45.0" prefWidth="373.0" style="-fx-font-size: 12;" GridPane.columnIndex="1" GridPane.rowIndex="5" />

